# Backtrader投资分析系统环境变量配置
# 复制此文件为 .env 并填入实际值

# =============================================================================
# 数据库配置
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=backtrader_db
DB_USER=your_username
DB_PASSWORD=your_password
DB_SCHEMA=public

# =============================================================================
# SEC API配置 (用于13F报告数据)
# =============================================================================
# 获取API密钥: https://sec-api.io/
# 免费版本有限制，付费版本无限制
SEC_API_KEY=your_sec_api_key_here

# =============================================================================
# 金融数据API配置
# =============================================================================
# Alpha Vantage API (股票数据)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# FRED API (宏观经济数据)
FRED_API_KEY=your_fred_api_key

# Quandl API (金融数据)
QUANDL_API_KEY=your_quandl_api_key

# Yahoo Finance (免费，无需API密钥)
# yfinance库会自动处理

# =============================================================================
# Redis配置 (缓存)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# 应用配置
# =============================================================================
# 日志级别: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 数据更新频率 (小时)
DATA_UPDATE_INTERVAL=24

# 最大并发请求数
MAX_CONCURRENT_REQUESTS=5

# 请求延迟 (秒)
REQUEST_DELAY=1

# =============================================================================
# 回测配置
# =============================================================================
# 初始资金
INITIAL_CASH=100000

# 手续费率
COMMISSION_RATE=0.001

# 滑点
SLIPPAGE=0.001

# =============================================================================
# 通知配置
# =============================================================================
# 邮件通知
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=your_email@gmail.com
SMTP_TO=recipient@gmail.com

# 企业微信通知
WECOM_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your_key

# =============================================================================
# 开发配置
# =============================================================================
# 开发模式
DEVELOPMENT_MODE=true

# 调试模式
DEBUG=false

# 测试模式
TEST_MODE=false

# =============================================================================
# 安全配置
# =============================================================================
# JWT密钥 (如果使用API认证)
JWT_SECRET_KEY=your_jwt_secret_key_here

# API访问令牌
API_ACCESS_TOKEN=your_api_access_token

# =============================================================================
# 文件路径配置
# =============================================================================
# 数据存储路径
DATA_PATH=./data

# 日志文件路径
LOG_PATH=./logs

# 报告输出路径
REPORT_PATH=./reports

# 图表输出路径
CHART_PATH=./plot_html

# =============================================================================
# 性能配置
# =============================================================================
# 数据库连接池大小
DB_POOL_SIZE=10

# 数据库连接池最大溢出
DB_MAX_OVERFLOW=20

# HTTP请求超时 (秒)
HTTP_TIMEOUT=30

# 数据缓存时间 (秒)
CACHE_TTL=3600